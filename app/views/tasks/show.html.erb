<%= link_to "edit task", edit_task_path %>
<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p><%= "#{@task.completed == true ? "[x] You have completed this task" : "[ ] You are yet to complete this task"}" %></p>

<%= link_to "Back to list", tasks_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
